<%- include('../../../../components/header.ejs') %>
<div class="main">
  <article>
    <section class="content-banner">
      <div class="type-area">
        <div class="banner">
          <div class="banner-title"><%= banner_title %></div>
          <div class="banner-brief"><%= banner_brief %></div>
          <div class="banner-describe"><%= banner_describe %></div>
          <div class="banner-describe-mobile"><%= banner_describe_mobile %></div>
        </div>
      </div>
      <img class="banner-img" src="/static/assets/page-views/support/apply-now/banner.png">
      <img class="banner-img-mobile" src="/static/assets/page-views/support/apply-now/banner-m.png">
    </section>
  </article>
  <section class="content">
    <nav class="breadcrumbs clearfix">
      <ul>
        <li><%= breadcrumbs_one %>&nbsp;/&nbsp;</li>
        <li><%= breadcrumbs_two %>&nbsp;/&nbsp;</li>
        <li class="active"><%= breadcrumbs_three %></li>
      </ul>
    </nav>
    <div class="main-content">
      <div class="application-form-wrapper">
        <form action="" id="application-form">
          <div class="form-title">
            <%= form_title %>
          </div>
          <div class="form-info">
            <%= form_info %>
          </div>
          <div class="name-field">
            <div class="title"><%= name_title %></div>
            <input type="text" name="name" id="name"
            />
            <div class="message">
                <div class="error-msg"><%= name_error_msg %></div>
                <div class="correct-msg"><%= name_correct_msg %></div>
            </div>
          </div>
          <div class="phone-field">
            <div class="title"><%= phone_title %></div>
            <input type="text" name="phone" id="phone"
            />
            <div class="message">
              <div class="error-msg"><%= phone_error_msg %></div>
              <div class="correct-msg"><%= phone_correct_msg %></div>
            </div>
          </div>
          <div class="email-field">
            <div class="title"><%= email_title %></div>
            <input type="text" name="email" id="email"
            />
            <div class="message">
                <div class="error-msg"><%= email_error_msg %></div>
                <div class="correct-msg"><%= email_correct_msg %></div>
            </div>
          </div>
          <div class="company-field">
            <div class="title"><%= company_title %></div>
            <input type="text" name="company" id="company"
            />
            <div class="message">
                <div class="error-msg"><%= company_error_msg %></div>
                <div class="correct-msg"><%= company_correct_msg %></div>
            </div>
          </div>
          <div class="company-survey">
            <div class="title"><%= survey_title %></div>
            <div class="switcher">
              <span id="used" class="checked"><%= yes %></span>
              <span id="didNotUse"><%= no %></span>
            </div>
            <div class="company-evaluation">
              <div class="evaluation-title">
                <%= evaluation_title %>
              </div>
              <ul class="clearfix evaluation-list">
                <li>
                  <span><%= first_evaluation_content %></span>
                  <ul class="stars clearfix">
                    <li class="icon-star"></li>
                    <li class="icon-star"></li>
                    <li class="icon-star"></li>
                    <li class="icon-star"></li>
                    <li class="icon-star"></li>
                    <li class="icon-star"></li>
                    <li class="icon-star"></li>
                  </ul>
                </li>
                <li>
                  <span><%= second_evaluation_content %></span>
                  <ul class="stars clearfix">
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                  </ul>
                </li>
                <li>
                  <span><%= third_evaluation_content %></span>
                  <ul class="stars clearfix">
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                  </ul>
                </li>
                <li>
                  <span><%= fourth_evaluation_content %></span>
                  <ul class="stars clearfix">
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                      <li class="icon-star"></li>
                  </ul>
                </li>
              </ul>
            </div>
            <textarea name="" id="appendInfo"
              placeholder="<%= used_holder %>" ></textarea>
            <div style="display: none">
              <span id="usedHolder"><%= used_holder %></span>
              <span id="didNotUseHolder"><%= did_not_use_holder %></span>
            </div>
          </div>
          <div class="btn-area clearfix">
            <button id="submitBtn"><%= submit_btn %></button>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>
<%- include('../../../../components/footer.ejs') %>